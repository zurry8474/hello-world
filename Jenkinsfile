pipeline {
    agent any
    
    stages {
    
         stage('build') {
         
             steps {
             
                   echo 'building the app' 
             }
         }
          stage('test') {
         
             steps {
             
                   echo 'testing the app' 
             }
         }
         
         
          stage('deploying') {
         
             steps {
             
                   echo 'deploying the app' 
             }
         }
         
          stage('checkout') {
         
             steps {
             
                   echo 'checkout the app' 
             }
         }
    }    
}
